<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Contributions</title>

  <!-- Required Links -->
  <%- include('partials/defaultLinks.ejs'); %>
    <link rel="stylesheet" href="/styles/user_contributions.css" type="text/css" />

    <!-- Font Awesome Access -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<%- include('partials/_user_menu'); %>
  <%- include('partials/_user_navbar'); %>


    <body>

      <section class="user_contributions_container">

        <!-- Avatar and Name -->
        <div class="avatar-container">
          <img src="/docs/icons/<%= user[0].user_icon%>" alt="Avatar">
          <h1><%= user[0].username%></h1>
        </div>



        <!-- User Story Menu -->
        <div class="user_contribution_menu">
          <ul>
            <li>
              <i class="fa-solid fa-calendar-days" style="color: #d90429;"></i>
              <a class="user_menu_link" href="">My contributions</a>
            </li>
            <li>
              <i class="fa-solid fa-heart" style="color: #d90429;"></i>
              <a class="user_menu_link" href="">Approved</a>
            </li>
            <li>
              <i class="fa-solid fa-arrow-up-a-z" style="color: #d90429;"></i>
              <a class="user_menu_link" href="">Rejected</a>
            </li>
            <li>
              <i class="fa-solid fa-check" style="color: #d90429;"></i>
              <a class="user_menu_link" href="">Pending</a>
            </li>
          </ul>
        </div>

        <section class="contribution_cards_container">
          <% for (let contribution of listOfContributions) { %>
          <div class="contributions-card">
            <!-- Avatar and User Name -->
            <div class="avatar-container2">
              <img src="/docs/icons/<%= user[0].user_icon%>" alt="Avatar">
              <div class="user-details">
                <h2><%= contribution.username%></h2>
                <p class="timestamp">Posted 2 hours ago</p>
              </div>
            </div>

            <!-- Contribution Details -->
            <div class="contribution-details">
              <p><span class="contribution-title">Contribution for:</span> <span class="story-title"><%= contribution.story_title%></span></p>
              <div class="divider"></div>
              <p><%= contribution.content%></p>
            </div>
          </div>
        <% } %>
        </section>
      </section>
    </body>

</html>