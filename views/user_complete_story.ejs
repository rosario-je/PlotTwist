<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Stories</title>

  <!-- Required Links -->
  <%- include('partials/defaultLinks.ejs'); %>

    <!-- Internal CSS -->
    <link rel="stylesheet" href="/styles/user_stories.css" type="text/css" />

    <!-- Internal Scripts -->
    <!-- THIS FILE NEEDS JQUERY -->
    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/mark_complete.js"></script>

    <!-- Font Awesome Access -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css"
      integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA=="
      crossorigin="anonymous" referrerpolicy="no-referrer" />

</head>
<%- include('partials/_user_menu'); %>
  <%- include('partials/_user_navbar'); %>

    <body>

      <section class="user_stories_container">

        <!-- Avatar and Name -->
        <div class="avatar-container">
          <img src="/docs/icons/<%=user.user_icon%>" alt="Avatar">
          <h3>@<%=user.username%>
          </h3>
        </div>

        <!-- User Story Menu -->
        <div class="user_story_menu">
          <ul>
            <li>
              <i class="fa-solid fa-calendar-days" style="color: #d90429;"></i>
              <a class="user_menu_link" href="/user/<%= user_id %>/stories">All my stories</a>
            </li>
            <li>
              <i class="fa-solid fa-arrow-up-a-z" style="color: #d90429;"></i>
              <a class="user_menu_link" href="">Alphabetical</a>
            </li>
            <li>
              <i class="fa-solid fa-check" style="color: #d90429;"></i>
              <a class="user_menu_link" href="/user/<%= user_id %>/complete">Completed</a>
            </li>
          </ul>
        </div>

        <div class="story_card_container">
          <% for(let story of completeStories) { %>
            <div class="story-card">
              <!-- Avatar and User Name -->
              <div class="avatar-container2">
                <img src="/docs/icons/<%=user.user_icon%>" alt="Avatar">
                <div class="user-details">
                  <h2>@<%=story.username%>
                  </h2>
                  <p class="timestamp">
                    <%=story.created_date%>
                  </p>
                </div>
              </div>

              <!-- Contribution Details -->
              <div class="story-details">
                <p><span class="story-title">
                    <%=story.title%>
                  </span></p>
                <p>
                  <%=story.content%>
                </p>
                <div class="story_footer">
                  <div class="upvotes">
                    <i class="fa-solid fa-heart" style="color: #d90429;"></i>
                    <p class="upvote-number">
                      <%=story.upvote_count%>
                    </p>
                  </div>
                  <a href="/stories/<%=story.id%>" class="readbutton">Read More</a>
                </div>
              </div>
            </div>
            <% } %>
        </div>

      </section>
    </body>

</html>