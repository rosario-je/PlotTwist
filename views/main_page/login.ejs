<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Page</title>

  <!-- Required Links -->
  <%- include('../partials/defaultLinks.ejs'); %>

  <!-- Interal CSS -->
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/login.css" type="text/css" />


</head>

<body>
  <%- include('../partials/_navbar'); %>

    <section id="login_page">
      <!------------ Left Container ------------>
      <div class="login_container_left">
        <h1><strong>Start</strong> or <strong>Continue</strong> your journey!</h1>
        <div id="devices_image_container">
          <img src="/docs/devices.png" alt="">
        </div>
      </div>

      <!------------ Right Container ------------>
      <div class="login_container_right">
        <form class="login_form">
          <h1>Login</h1>
          <div class="emailInput">
            <label for="emailInput" class="form-label">Email address</label>
            <input type="email" class="form-control" id="emailInput" aria-describedby="emailHelp"
              placeholder="Enter your email here...">
          </div>
          <div class="passwordInput">
            <label for="passowordInput" class="form-label">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1"
              placeholder="Enter your password here...">
          </div class='signin_button'>
          <button type="submit" class="btn btn-primary">Sign In</button>
        </form>
      </div>



    </section>

    <!----JS Links-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"></script>
</body>

</html>