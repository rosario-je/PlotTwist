<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add To Story</title>
  <!-- Required Links -->
  <%- include('../partials/defaultLinks.ejs'); %>

    <!-- Internal CSS -->
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/add_to_story.css" type="text/css" />

        <!-- Internal Scripts -->
        <script src="/vendor/jquery-3.0.0.js"></script>
        <script defer src="/scripts/add_to_story.js"></script>

</head>
<%- include('../partials/_user_menu'); %>
  <%- include('../partials/_user_navbar'); %>

    <body>

      <section class="add_to_story_container">

        <!-- Avatar and Name -->
        <div class="avatar-container">
          <img src="/docs/icons/<%=user.user_icon%>" alt="User Avatar">
          <h1>
            @<%=user.username%>
          </h1>
        </div>

        <!-- Story Body and Button -->

        <form id="textarea-container" class="contribute-form" action="/stories/contribute/<%=storyId %>" method="post">
          <textarea id="storyTextarea" name="text" placeholder="Continue Story..."></textarea>
          <div class="button-counter">
          <span id="charCount">500</span>
          <button class="post_button">POST</button>
        </div>
      </form>

      </section>
    </body>

</html>
